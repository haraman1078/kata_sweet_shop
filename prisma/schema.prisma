generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sweet {
  id       Int     @id @default(autoincrement())
  name     String
  category String
  price    Float
  quantity Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


